*
  margin 0
  padding 0
  -webkit-text-size-adjust none

body
  background color-background
  color color-font
  font-family font-default
  font-size 15px
  text-shadow 0 0 1px transparent
  @media screen and (max-width: 1000px)
    margin 0 30px
  @media screen and (max-width: 600px)
    font-size 13px
    margin 0 10px

h1, h2, h3, h4, h5, h6
  font-family font-title

h1
  font-size 1.8em
  @media screen and (max-width: 600px)
    font-size 1.6em

h2
  font-size 1.5em
  @media screen and (max-width: 600px)
    font-size 1.4em

h3
  font-size 1.3em
  @media screen and (max-width: 600px)
    font-size 1.2em

a
  text-decoration none
  color color-link

.alignleft
  float left

.alignright
  float right

.clearfix
  clearfix()

.inner
  width page-width
  margin 0 auto
  @media screen and (max-width: 1000px)
    width 100%

#main-col
  width 900px
  @media screen and (max-width: 1000px)
    width 100%
    margin-right -300px
  @media screen and (max-width: 900px)
    margin-right 0
    float none